---
import Header from "./Header.jsx";
import Footer from "./Footer.astro";

type Item = {
  src: string;        
  alt: string;
  href: string;       
  filename: string;   
  size: string;
  reduced?: string;   
  download?: string;  
};

type Campaign = {
  id: string;
  title: string;
  description: string;
  items: Item[];
};

const CAMPAIGNS_LEFT: Campaign[] = [
  {
    id: "coicit",
    title: "COICIT 2025",
    description: "Artes y paquetes oficiales del COICIT.",
    items: [
      {
        reduced: "/img/coicit/medios/afiches_qr.jpg",
        src: "/img/coicit/medios/afiches_qr.jpg",
        alt: "COICIT – Afiches con QR",
        href: "/img/coicit/medios/afiches_qr.jpg",
        download: "/img/coicit/medios/afiches_qr.jpg",
        filename: "coicit-afiches-qr.jpg",
        size: "Poster",
      },
      {
        reduced: "/img/coicit/medios/reducidos/afiches_paquetes.webp",
        src: "/img/coicit/medios/afiches_paquetes.jpg",
        alt: "COICIT – Afiches de Paquetes",
        href: "/img/coicit/medios/afiches_paquetes.jpg",
        download: "/img/coicit/medios/afiches_paquetes.jpg",
        filename: "coicit-afiches-paquetes.jpg",
        size: "Poster",
      },
    ],
  },
  {
    id: "itransfert",
    title: "ITransferT",
    description: "Artes promocionales de ITransferT.",
    items: [
      {
        src: "/img/coicit/medios/afiche_itransfert.png",
        alt: "COICIT – Afiches de ITransferT",
        href: "/img/coicit/medios/afiche_itransfert.png",
        filename: "coicit-afiches-itransfer.jpg",
        size: "Poster",
      },
    ],
  },
];

const CAMPAIGNS_RIGHT: Campaign[] = [
  {
    id: "wici",
    title: "WICI-UTP 2025",
    description: "Artes del taller WICI.",
    items: [
      {
        src: "/img/coicit/medios/WICI-UTPVE´2025_en.jpg",
        alt: "WICI – Call for Papers (EN)",
        href: "/img/coicit/medios/WICI-UTPVE´2025_en.jpg",
        download: "/img/coicit/medios/WICI-UTPVE´2025_en.jpg",
        filename: "WICI-UTPVE´2025_en.png",
        size: "Poster",
      },
      {
        src: "/img/coicit/medios/WICI-UTPVE´2025_es.jpg",
        alt: "WICI – Call for Papers (ES)",
        href: "/img/coicit/medios/WICI-UTPVE´2025_es.jpg",
        filename: "WICI-UTPVE´2025_es.jpg",
        size: "Poster",
      },
    ],
  },
];

const ROWS: { left?: Campaign; right?: Campaign }[] = Array.from(
  { length: Math.max(CAMPAIGNS_LEFT.length, CAMPAIGNS_RIGHT.length) },
  (_, i) => ({
    left: CAMPAIGNS_LEFT[i],
    right: CAMPAIGNS_RIGHT[i],
  })
);
---

<Header client:load />

<main class="pt-28 pb-16 min-h-[70vh] programa-bg">
  <section class="mx-auto w-full max-w-6xl xl:max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-[#e0b02e] drop-shadow-lg animate-gradient leading-[1.15] pb-[2px]">
        Divulgación COICIT 2025
      </h1>
      <p class="mt-3 text-white/80 text-lg max-w-3xl mx-auto">
        Dos columnas por evento. Cuando se acaben las imágenes, continúa con la siguiente sección.
      </p>
    </div>

    {ROWS.map((row) => (
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-10 mb-10">
        {row.left && row.right ? (
          <>
            <!-- Izquierda (con pareja) -->
            <div class="space-y-10">
              <section id={row.left.id}>
                <header class="mb-3 text-center">
                  <h2 class="text-2xl sm:text-3xl font-bold text-white/95">{row.left.title}</h2>
                  <p class="text-white/60 text-sm sm:text-base">{row.left.description}</p>
                </header>
                <div class={`grid gap-5 justify-items-center ${row.left.items.length === 1 ? 'grid-cols-1' : 'grid-cols-1 sm:grid-cols-2'}`}>
                  {row.left.items.map((item) => (
                    <article class="group relative rounded-xl overflow-hidden bg-white/[0.03] border border-white/10 shadow-[0_8px_24px_rgba(0,0,0,0.25)] hover:shadow-[0_12px_32px_rgba(0,0,0,0.35)] transition w-full max-w-[360px]">
                      <div class="aspect-[3/4] overflow-hidden">
                        <img src={item.reduced ?? item.src} alt={item.alt} loading="lazy" class="w-full h-full object-contain p-3 transition duration-300 group-hover:scale-[1.02]" />
                      </div>
                      <div class="p-3 flex items-center justify-between gap-3 bg-gradient-to-r from-[#0f2946]/80 to-[#17395b]/80">
                        <div>
                          <h3 class="text-white text-sm font-semibold leading-tight line-clamp-1">{item.alt || "Arte"}</h3>
                          <p class="text-white/50 text-xs">{item.size}</p>
                        </div>
                        <div class="flex items-center gap-2">
                          <a href={item.href} target="_blank" rel="noopener noreferrer" class="px-3 py-1.5 text-xs font-semibold rounded-lg bg-white/10 text-white hover:bg-white/20 transition" aria-label={`Ver ${item.alt}`}>Ver</a>
                          <a href={item.download ?? item.href} download={item.filename} class="px-3 py-1.5 text-xs font-semibold rounded-lg bg-[#e0b02e] text-[#07182e] hover:brightness-110 transition" aria-label={`Descargar ${item.filename}`}>Descargar</a>
                        </div>
                      </div>
                    </article>
                  ))}
                </div>
              </section>
            </div>

            <!-- Derecha (con pareja) -->
            <div class="space-y-10">
              <section id={row.right.id}>
                <header class="mb-3 text-center">
                  <h2 class="text-2xl sm:text-3xl font-bold text-white/95">{row.right.title}</h2>
                  <p class="text-white/60 text-sm sm:text-base">{row.right.description}</p>
                </header>
                <div class={`grid gap-5 justify-items-center ${row.right.items.length === 1 ? 'grid-cols-1' : 'grid-cols-1 sm:grid-cols-2'}`}>
                  {row.right.items.map((item) => (
                    <article class="group relative rounded-xl overflow-hidden bg-white/[0.03] border border-white/10 shadow-[0_8px_24px_rgba(0,0,0,0.25)] hover:shadow-[0_12px_32px_rgba(0,0,0,0.35)] transition w-full max-w-[360px]">
                      <div class="aspect-[3/4] overflow-hidden">
                        <img src={item.reduced ?? item.src} alt={item.alt} loading="lazy" class="w-full h-full object-contain p-3 transition duration-300 group-hover:scale-[1.02]" />
                      </div>
                      <div class="p-3 flex items-center justify-between gap-3 bg-gradient-to-r from-[#0f2946]/80 to-[#17395b]/80">
                        <div>
                          <h3 class="text-white text-sm font-semibold leading-tight line-clamp-1">{item.alt || "Arte"}</h3>
                          <p class="text-white/50 text-xs">{item.size}</p>
                        </div>
                        <div class="flex items-center gap-2">
                          <a href={item.href} target="_blank" rel="noopener noreferrer" class="px-3 py-1.5 text-xs font-semibold rounded-lg bg-white/10 text-white hover:bg-white/20 transition" aria-label={`Ver ${item.alt}`}>Ver</a>
                          <a href={item.download ?? item.href} download={item.filename} class="px-3 py-1.5 text-xs font-semibold rounded-lg bg-[#e0b02e] text-[#07182e] hover:brightness-110 transition" aria-label={`Descargar ${item.filename}`}>Descargar</a>
                        </div>
                      </div>
                    </article>
                  ))}
                </div>
              </section>
            </div>
          </>
        ) : (
          <>
            {/* Solo una sección en la fila -> centrar y ocupar ambas columnas */}
            {row.left && (
              <div class="lg:col-span-2 flex justify-center">
                <div class="space-y-10 w-full max-w-3xl">
                  <section id={row.left.id}>
                    <header class="mb-3 text-center">
                      <h2 class="text-2xl sm:text-3xl font-bold text-white/95">{row.left.title}</h2>
                      <p class="text-white/60 text-sm sm:text-base">{row.left.description}</p>
                    </header>
                    <div class={`grid gap-5 justify-items-center ${row.left.items.length === 1 ? 'grid-cols-1' : 'grid-cols-1 sm:grid-cols-2'}`}>
                      {row.left.items.map((item) => (
                        <article class="group relative rounded-xl overflow-hidden bg-white/[0.03] border border-white/10 shadow-[0_8px_24px_rgba(0,0,0,0.25)] hover:shadow-[0_12px_32px_rgba(0,0,0,0.35)] transition w-full max-w-[360px]">
                          <div class="aspect-[3/4] overflow-hidden">
                            <img src={item.reduced ?? item.src} alt={item.alt} loading="lazy" class="w-full h-full object-contain p-3 transition duration-300 group-hover:scale-[1.02]" />
                          </div>
                          <div class="p-3 flex items-center justify-between gap-3 bg-gradient-to-r from-[#0f2946]/80 to-[#17395b]/80">
                            <div>
                              <h3 class="text-white text-sm font-semibold leading-tight line-clamp-1">{item.alt || "Arte"}</h3>
                              <p class="text-white/50 text-xs">{item.size}</p>
                            </div>
                            <div class="flex items-center gap-2">
                              <a href={item.href} target="_blank" rel="noopener noreferrer" class="px-3 py-1.5 text-xs font-semibold rounded-lg bg-white/10 text-white hover:bg-white/20 transition" aria-label={`Ver ${item.alt}`}>Ver</a>
                              <a href={item.download ?? item.href} download={item.filename} class="px-3 py-1.5 text-xs font-semibold rounded-lg bg-[#e0b02e] text-[#07182e] hover:brightness-110 transition" aria-label={`Descargar ${item.filename}`}>Descargar</a>
                            </div>
                          </div>
                        </article>
                      ))}
                    </div>
                  </section>
                </div>
              </div>
            )}
            {row.right && (
              <div class="lg:col-span-2 flex justify-center">
                <div class="space-y-10 w-full max-w-3xl">
                  <section id={row.right.id}>
                    <header class="mb-3 text-center">
                      <h2 class="text-2xl sm:text-3xl font-bold text-white/95">{row.right.title}</h2>
                      <p class="text-white/60 text-sm sm:text-base">{row.right.description}</p>
                    </header>
                    <div class={`grid gap-5 justify-items-center ${row.right.items.length === 1 ? 'grid-cols-1' : 'grid-cols-1 sm:grid-cols-2'}`}>
                      {row.right.items.map((item) => (
                        <article class="group relative rounded-xl overflow-hidden bg-white/[0.03] border border-white/10 shadow-[0_8px_24px_rgba(0,0,0,0.25)] hover:shadow-[0_12px_32px_rgba(0,0,0,0.35)] transition w-full max-w-[360px]">
                          <div class="aspect-[3/4] overflow-hidden">
                            <img src={item.reduced ?? item.src} alt={item.alt} loading="lazy" class="w-full h-full object-contain p-3 transition duration-300 group-hover:scale-[1.02]" />
                          </div>
                          <div class="p-3 flex items-center justify-between gap-3 bg-gradient-to-r from-[#0f2946]/80 to-[#17395b]/80">
                            <div>
                              <h3 class="text-white text-sm font-semibold leading-tight line-clamp-1">{item.alt || "Arte"}</h3>
                              <p class="text-white/50 text-xs">{item.size}</p>
                            </div>
                            <div class="flex items-center gap-2">
                              <a href={item.href} target="_blank" rel="noopener noreferrer" class="px-3 py-1.5 text-xs font-semibold rounded-lg bg-white/10 text-white hover:bg-white/20 transition" aria-label={`Ver ${item.alt}`}>Ver</a>
                              <a href={item.download ?? item.href} download={item.filename} class="px-3 py-1.5 text-xs font-semibold rounded-lg bg-[#e0b02e] text-[#07182e] hover:brightness-110 transition" aria-label={`Descargar ${item.filename}`}>Descargar</a>
                            </div>
                          </div>
                        </article>
                      ))}
                    </div>
                  </section>
                </div>
              </div>
            )}
          </>
        )}
      </div>
    ))}

    <!-- Próximamente -->
    <div class="mt-8 text-center">
      <div class="inline-flex items-center gap-3 px-5 py-3 rounded-2xl bg-white/5 border border-white/10">
        <span class="text-2xl sm:text-3xl animate-bounce">⏳</span>
        <div class="text-left">
          <p class="text-white font-semibold leading-tight">Más artes en camino</p>
          <p class="text-white/60 text-sm">Sección en actualización constante.</p>
        </div>
      </div>
    </div>
  </section>
</main>

<Footer />

<style>
  .programa-bg { background: linear-gradient(145deg, #07182e 0%, #0f2946 50%, #17395b 100%); }
  .animate-bounce { animation: bounce 1.2s infinite; }
  @keyframes bounce { 0%, 100% { transform: translateY(0);} 50% { transform: translateY(-10px);} }
  .animate-gradient { background: linear-gradient(90deg, #e0b02e 20%, #f5e384 40%, #e0b02e 60%); background-size: 200% auto; color: transparent; background-clip: text; -webkit-background-clip: text; animation: gradient-move 2.2s linear infinite; }
  @keyframes gradient-move { 0% { background-position: 0% 50%; } 100% { background-position: 100% 50%; } }
</style>
