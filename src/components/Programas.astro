---
import Header from "./Header.jsx";
import Footer from "./Footer.astro";
import EventCalendar from "./EventCalendar.jsx";
---

<Header client:load />

<main class="pt-28 pb-16 min-h-screen programa-bg">
  <div class="flex flex-col items-center justify-center w-full max-w-2xl mx-auto mb-16">
    <h1 class="text-4xl sm:text-5xl font-bold text-[#e0b02e] drop-shadow-lg mb-6 animate-gradient py-2">
      Programas COICIT 2025
    </h1>
    <p class="text-white text-xl sm:text-2xl mb-4 opacity-85 text-center font-semibold tracking-wide">
      Descubre nuestros eventos<br />
      y forma parte del futuro tecnol√≥gico.
    </p>
  </div>
  
  <!-- Calendario de eventos -->
  <EventCalendar client:load />
</main>

<Footer />

<style>
  .programa-bg {
    background: linear-gradient(145deg, #07182e 0%, #0f2946 50%, #17395b 100%);
  }
  .animate-gradient {
    background: linear-gradient(90deg, #e0b02e 20%, #f5e384 40%, #e0b02e 60%);
    background-size: 200% auto;
    color: transparent;
    background-clip: text;
    -webkit-background-clip: text;
    animation: gradient-move 2.2s linear infinite;
    line-height: 1.2;
    padding: 0.25rem 0;
  }
  @keyframes gradient-move {
    0% { background-position: 0% 50%; }
    100% { background-position: 100% 50%; }
  }
</style>
