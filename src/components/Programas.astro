<style>
  .programa-bg {
    background: linear-gradient(145deg, #07182e 0%, #0f2946 50%, #17395b 100%);
  }
  .animate-gradient {
    background: linear-gradient(90deg, #e0b02e 20%, #f5e384 40%, #e0b02e 60%);
    background-size: 200% auto;
    color: transparent;
    background-clip: text;
    -webkit-background-clip: text;
    animation: gradient-move 2.2s linear infinite;
    line-height: 1.2;
