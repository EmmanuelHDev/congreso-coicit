<script>
  // Contador removido. Se conserva el ajuste del logo más abajo.
 
   function ajustarTamañoLogo() {
   const img = document.querySelector('img[alt="Logo Congreso COICIT"]') as HTMLImageElement;
 
   if (!img) return;
 
   const width = window.innerWidth;
 
   if (width < 640) {
     img.style.width = '900px !important';
   } else if (width >= 640 && width < 768) {
     img.style.width = '800px';
   } else if (width >= 768 && width < 1024) {
     img.style.width = '1500px';
   } else {
     img.style.width = '950px';
   }
 }
 
 ajustarTamañoLogo();
 
 window.addEventListener('resize', ajustarTamañoLogo);

</script>

<style>
  .countdown-glow {
    text-shadow:
      0 2px 16px #00aaffbb,
      0 1px 1px #0009;
    letter-spacing: 0.05em;
    background: rgba(20, 80, 210, 0.07);
    border-radius: 1.3rem;
