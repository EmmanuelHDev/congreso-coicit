---
import Header from "../components/Header.jsx";
import Footer from "./Footer.astro";
---

<section
  class="relative min-h-screen overflow-hidden bg-[#010d1f] flex items-center justify-center"
>
  <Header client:load />

  <div
    class="relative z-10 max-w-screen-xl w-full px-4 py-16 sm:px-6 sm:py-24 lg:px-8 lg:py-32 mx-auto"
  >
    <div class="max-w-prose mx-auto text-center">
      <h1 class="text-xl font-bold text-white sm:text-5xl opacity-90">
        Pronto
      </h1>

      <img
        src="/img/coicit/COICIT-FINAL.webp"
        alt="logo congreso"
        class="mx-auto max-w-320px lg:max-w-lg"
      />

      <p class="text-lg font-semibold text-white mb-4 opacity-70">
        Congreso: Del 14 al 17 de octubre de 2025
      </p>

      <div
        id="countdown"
        class="text-white text-2xl font-bold mb-6 flex justify-center gap-4"
      >
        <div><span id="days">--</span> días</div>
        <div><span id="hours">--</span> hrs</div>
        <div><span id="minutes">--</span> min</div>
        <div><span id="seconds">--</span> seg</div>
      </div>

      <h2 class="text-2xl font-bold text-white mb-6 mt-12">Áreas de interés</h2>

      <div class="w-full flex justify-center items-center mt-12">
        <div class="grid gap-4 bento-grid">
          <div
            style="grid-area: cambio;"
            class="rounded-2xl overflow-hidden relative shadow-lg group"
          >
            <img
              src="/img/coicit/areas/13.png"
              alt="Cambio Climático"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent px-4 py-2"
            >
              <span
                class="text-white text-base font-semibold drop-shadow text-center block"
                >Cambio Climático</span
              >
            </div>
          </div>
          <div
            style="grid-area: infraestructura;"
            class="rounded-2xl overflow-hidden relative shadow-lg group"
          >
            <img
              src="/img/coicit/areas/15.png"
              alt="Infraestructura"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent px-4 py-2"
            >
              <span
                class="text-white text-base font-semibold drop-shadow text-center block"
                >Infraestructura</span
              >
            </div>
          </div>
          <div
            style="grid-area: nuevas;"
            class="rounded-2xl overflow-hidden relative shadow-lg group"
          >
            <img
              src="/img/coicit/areas/17.png"
              alt="Nuevas Tecnologías"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent px-4 py-2"
            >
              <span
                class="text-white text-base font-semibold drop-shadow text-center block"
                >Energías</span
              >
            </div>
          </div>
          <div
            style="grid-area: economia;"
            class="rounded-2xl overflow-hidden relative shadow-lg group"
          >
            <img
              src="/img/coicit/areas/20.png"
              alt="Economía Circular"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent px-4 py-2"
            >
              <span
                class="text-white text-base font-semibold drop-shadow text-center block"
                >Ciencias e Ingeniería de materiales</span
              >
            </div>
          </div>
          <div
            style="grid-area: desarrollo;"
            class="rounded-2xl overflow-hidden relative shadow-lg group"
          >
            <img
              src="/img/coicit/areas/14.png"
              alt="Desarrollo Social"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent px-4 py-2"
            >
              <span
                class="text-white text-base font-semibold drop-shadow text-center block"
                >Desarrollo Social</span
              >
            </div>
          </div>
          <div
            style="grid-area: logistica;"
            class="rounded-2xl overflow-hidden relative shadow-lg group"
          >
            <img
              src="/img/coicit/areas/16.png"
              alt="Logística y Transporte"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent px-4 py-2"
            >
              <span
                class="text-white text-base font-semibold drop-shadow text-center block"
                >Logística y Transporte</span
              >
            </div>
          </div>
          <div
            style="grid-area: energia;"
            class="rounded-2xl overflow-hidden relative shadow-lg group"
          >
            <img
              src="/img/coicit/areas/19.png"
              alt="Energía"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent px-4 py-2"
            >
              <span
                class="text-white text-base font-semibold drop-shadow text-center block"
                >Economía Circular</span
              >
            </div>
          </div>
          <div
            style="grid-area: materiales;"
            class="rounded-2xl overflow-hidden relative shadow-lg group"
          >
            <img
              src="/img/coicit/areas/18.png"
              alt="Ciencias e Ingeniería de Materiales"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent px-4 py-2"
            >
              <span
                class="text-white text-base font-semibold drop-shadow text-center block"
                >Nuevas tecnologías de información y comunicación</span
              >
            </div>
          </div>
          <div
            style="grid-area: innovacion;"
            class="rounded-2xl overflow-hidden relative shadow-lg group"
          >
            <img
              src="/img/coicit/areas/12.png"
              alt="Innovación"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            />
            <div
              class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/80 to-transparent px-4 py-2"
            >
              <span
                class="text-white text-base font-semibold drop-shadow text-center block"
                >Innovación</span
              >
            </div>
          </div>
        </div>
      </div>

      <h2 class="text-2xl font-bold text-white mb-6 mt-12">
        Precio de Paquetes
      </h2>
      <div
        class="info-paquetes space-y-4 mb-10 w-full max-w-5xl mx-auto text-left"
      >
        <div class="flex items-center gap-2 border-b border-gray-400 pb-2">
          <span style="font-size:1.5rem;">💵</span>
          <span class="font-semibold text-green-400 italic"
            >Los precios de los paquetes será hasta el 30 de septiembre. A
            partir del 01 de octubre todos los paquetes tienen un
            incremento de B/10.00</span
          >
        </div>
      </div>
      <div class="paquetes-grid-custom mx-auto my-12">
        <div class="paquete-item">
          <img
            src="/img/coicit/paquetes/Paquete_Docente_TiempoCompleto.webp"
            alt="Docente Tiempo Completo"
          />
          <span class="paquete-desc"
            >A partir del la fecha 01/10/2025 el costo del paquete es de
            B/.70.00</span
          >
        </div>
        <div class="paquete-item">
          <img
            src="/img/coicit/paquetes/Paquete_Docente_TiempoParcial.webp"
            alt="Docente Tiempo Parcial"
          />
          <span class="paquete-desc"
            >A partir del la fecha 01/10/2025 el costo del paquete es de
            B/.60.00</span
          >
        </div>
        <div class="paquete-item">
          <img
            src="/img/coicit/paquetes/Paquete_Estudiante_Egresado.webp"
            alt="Estudiante/Egresado"
          />
          <span class="paquete-desc"
            >A partir del la fecha 01/10/2025 el costo del paquete es de
            B/.55.00</span
          >
        </div>
        <div class="paquete-item">
          <img
            src="/img/coicit/paquetes/Paquete_Participantes_Externos.webp"
            alt="Participantes Externos"
          />
          <span class="paquete-desc"
            >A partir del la fecha 01/10/2025 el costo del paquete es de
            B/.75.00</span
          >
        </div>
        <div class="paquete-item">
          <img
            src="/img/coicit/paquetes/Paquete_Tour.webp"
            alt="Tour Empresarial"
          />
          <span class="paquete-desc"
            >A partir del la fecha 01/10/2025 el costo del paquete es de
            B/.20.00</span
          >
        </div>
      </div>

      <style>
        .paquetes-grid-custom {
          display: grid;
          gap: 2.5rem 2rem;
          justify-content: center;
          align-items: end;
          max-width: 1200px;
        }

        .paquete-item {
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: flex-end;
          width: 100%;
        }

        .paquete-item img {
          width: 100%;
          max-width: 320px;
          height: auto;
          border-radius: 1rem;
          box-shadow: 0 8px 24px #0002;
          background: #fff;
        }

        .paquete-desc {
          color: #fff;
          margin-top: 1rem;
          font-size: 1rem;
          font-weight: 600;
          text-align: center;
        }

        @media (min-width: 1024px) {
          .paquetes-grid-custom {
            grid-template-columns: repeat(3, minmax(250px, 1fr));
            justify-content: center;
          }
          .paquetes-grid-custom:has(.paquete-item:nth-child(5):last-child)
            .paquete-item:nth-child(5) {
            grid-column: 2 / 3;
          }
        }

        @media (max-width: 1023px) {
          .paquetes-grid-custom {
            grid-template-columns: repeat(2, minmax(150px, 1fr));
            gap: 1.5rem 1rem;
          }
          .paquete-item img {
            max-width: 260px;
          }
          .paquetes-grid-custom > .paquete-item:last-child:nth-child(odd) {
            grid-column: 1 / -1;
            justify-self: center;
          }
        }

        @media (max-width: 640px) {
          .paquetes-grid-custom {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            padding: 0 0.5rem;
          }
          .paquete-item img {
            max-width: 130px;
          }
          .paquete-desc {
            font-size: 0.83rem;
          }
          .paquetes-grid-custom > .paquete-item:last-child:nth-child(odd) {
            grid-column: 1 / -1;
            justify-self: center;
          }
        }
      </style>
    </div>
  </div>
</section>
<Footer />

<script>
  const countdown = () => {
    const targetDate = new Date("2025-10-14T00:00:00").getTime();
    const now = new Date().getTime();
    const difference = targetDate - now;

    if (difference <= 0) {
      const countdownEl = document.getElementById("countdown");
      if (countdownEl) {
        countdownEl.innerHTML = "¡Ya comenzó el congreso!";
      }
      return;
    }

    const days = Math.floor(difference / (1000 * 60 * 60 * 24));
    const hours = Math.floor((difference / (1000 * 60 * 60)) % 24);
    const minutes = Math.floor((difference / 1000 / 60) % 60);
    const seconds = Math.floor((difference / 1000) % 60);

    const daysEl = document.getElementById("days");
    if (daysEl) daysEl.innerText = days.toString();
    const hoursEl = document.getElementById("hours");
    if (hoursEl) hoursEl.innerText = hours.toString().padStart(2, "0");
    const minutesEl = document.getElementById("minutes");
    if (minutesEl) minutesEl.innerText = minutes.toString().padStart(2, "0");
    const secondsEl = document.getElementById("seconds");
    if (secondsEl) secondsEl.innerText = seconds.toString().padStart(2, "0");
  };

  setInterval(countdown, 1000);
  countdown();
</script>

<style>
  .bento-grid {
    grid-template-columns: 320px 320px 320px 320px;
    grid-template-rows: 220px 220px 220px;
    grid-template-areas:
      "cambio infraestructura nuevas economia"
      "desarrollo logistica logistica economia"
      "energia materiales materiales innovacion";
  }
  .bento-grid span {
    font-size: 1rem;
  }
  @media (max-width: 1024px) and (min-width: 641px) {
    .bento-grid {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: auto;
      grid-template-areas: none;
    }
    .bento-grid > div {
      grid-area: unset !important;
      height: 180px;
    }
    .bento-grid img {
      height: 180px;
      object-fit: cover;
    }
    .bento-grid span {
      font-size: 0.95rem;
    }
  }
  @media (max-width: 640px) {
    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto;
      grid-template-areas: none;
    }
    .bento-grid > div {
      min-height: 0;
      height: 140px;
      grid-area: unset !important;
    }
    .bento-grid img {
      height: 140px;
      object-fit: cover;
    }
    .bento-grid span {
      font-size: 0.8rem;
    }
  }
  @media (max-width: 768px) {
    .max-w-\[400px\] {
      max-width: 90vw !important;
    }
  }
  @media (max-width: 640px) {
    .grid-cols-2 {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    .max-w-\[400px\] {
      max-width: 95vw !important;
    }
    .my-12 {
      margin-top: 1.5rem;
    }
  }
</style>
