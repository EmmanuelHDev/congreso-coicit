    .paquete-agotado-overlay {
      font-size: 1.2rem;
      padding: 0.5rem 1rem;
      letter-spacing: 0.8px;
    }
  }

  @media (max-width: 640px) {
    .paquete-agotado-overlay {
      display: none; /* Ocultar overlay en móvil */
